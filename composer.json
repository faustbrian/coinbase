{
    "name": "plients/coinbase",
    "description": "A Coinbase Client for PHP",
    "keywords": [
        "api",
        "http",
        "coinbase"
    ],
    "license": "MPL-2.0",
    "authors": [
        {
            "name": "Brian Faust",
            "email": "hello@basecode.sh",
            "homepage": "https://basecode.sh"
        }
    ],
    "require": {
        "php": "^7.1",
        "faustbrian/http": "^1.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^8.2"
    },
    "autoload": {
        "psr-4": {
            "Plients\\Coinbase\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Plients\\Tests\\Coinbase\\": "tests"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
